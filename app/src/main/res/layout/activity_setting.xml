<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pureWhite"
    tools:context=".activities.SettingActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_setting"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_scrollFlags="scroll|enterAlways|snap"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--账户-->
            <android.support.v7.widget.CardView
                android:onClick="nonImplementSettingOnClick"
                app:cardBackgroundColor="@color/pureWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_account_circle_black_24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="账户与安全"
                        android:textSize="20dp"
                        android:layout_margin="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

<!--            <RelativeLayout-->
<!--                android:layout_gravity="center_horizontal|bottom"-->
<!--                android:background="@color/boneDark"-->
<!--                android:layout_marginHorizontal="56dp"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="1dp"/>-->

            <!--通用-->
            <android.support.v7.widget.CardView
                android:onClick="nonImplementSettingOnClick"
                app:cardBackgroundColor="@color/pureWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_more_card_black_24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="通用"
                        android:textSize="20dp"
                        android:layout_margin="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

<!--            <RelativeLayout-->
<!--                android:layout_gravity="center_horizontal|bottom"-->
<!--                android:background="@color/boneDark"-->
<!--                android:layout_marginHorizontal="56dp"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="1dp"/>-->

            <!--隐私-->
            <android.support.v7.widget.CardView
                android:onClick="nonImplementSettingOnClick"
                app:cardBackgroundColor="@color/pureWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_fingerprint_black_24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="隐私"
                        android:textSize="20dp"
                        android:layout_margin="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_gravity="center"
                android:background="@color/boneDark"
                android:padding="56dp"
                android:layout_marginHorizontal="56dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <!--帮助-->
            <android.support.v7.widget.CardView
                android:onClick="nonImplementSettingOnClick"
                app:cardBackgroundColor="@color/pureWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_help_outline_black_24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="帮助与反馈"
                        android:textSize="20dp"
                        android:layout_margin="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

<!--            <RelativeLayout-->
<!--                android:layout_gravity="center_horizontal|bottom"-->
<!--                android:background="@color/boneDark"-->
<!--                android:layout_marginHorizontal="56dp"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="1dp"/>-->

            <!--关于-->
            <android.support.v7.widget.CardView
                android:onClick="aboutSettingOnClick"
                app:cardBackgroundColor="@color/pureWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_info_outline_black_24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="关于 Musharing"
                        android:textSize="20dp"
                        android:layout_margin="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>