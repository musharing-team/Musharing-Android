<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/tpsl2Blue"
    tools:context=".fragments.MusicFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--显示曲目信息的磁带-->
        <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_alignParentTop="true"
                android:layout_width="400dp"
                android:layout_margin="8dp"
                android:layout_height="225dp"
                android:src="@drawable/tape_hc" />

            <android.support.v7.widget.CardView
                android:layout_alignParentTop="true"
                android:layout_marginTop="32dp"
                android:layout_centerHorizontal="true"
                android:layout_width="300dp"
                android:layout_height="52dp"
                android:elevation="1dp"
                app:cardBackgroundColor="#0000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/tag_c"
                    android:padding="3dp"
                    android:orientation="vertical">

                    <!-- Title -->
                    <TextView
                        android:id="@+id/play_title_text"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:text="孤单的月饼"
                        android:layout_width="match_parent"
                        android:layout_height="32dp" />

                    <!-- Artist -->
                    <TextView
                        android:id="@+id/play_artist_text"
                        android:textColor="#888"
                        android:textSize="12sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:text="卖报的小王子"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <!--控制操作卡片-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#ffff"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="16dp">

                <!-- Progress -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="24sp" >

                    <TextView
                        android:id="@+id/play_time"
                        android:height="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="——:——"
                        android:layout_marginRight="5dp"
                        android:textSize="8dp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />

                    <ProgressBar
                        android:id="@+id/play_progress_bar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="12" />

                    <TextView
                        android:id="@+id/play_residue"
                        android:height="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="——:——"
                        android:layout_marginLeft="5dp"
                        android:textSize="8dp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!--Buttons-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Nav -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="8dp"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/nav_button"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/button_common"
                            android:foreground="?android:attr/selectableItemBackground"/>

                        <TextView
                            android:text="导航"
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center" />

                    </LinearLayout>

                    <!--上一曲-->
                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_fast_rewind_grey_700_36dp"
                        android:background="#0000" />

                    <!-- Start/Pause -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="32dp"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/play_button"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/button_em"
                            android:foreground="?android:attr/selectableItemBackground"/>

                        <TextView
                            android:id="@+id/play_status_text"
                            android:text="播放"
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center" />

                    </LinearLayout>

                    <!--下一曲-->
                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_fast_forward_grey_700_36dp"
                        android:background="#0000" />

                    <!-- Room -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="8dp"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/room_button"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/button_common"
                            android:foreground="?android:attr/selectableItemBackground"/>

                        <TextView
                            android:text="房间"
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:foreground="?android:attr/selectableItemBackground"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Volume -->
                <LinearLayout
                    android:gravity="center"
                    android:elevation="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginLeft="32dp"
                        android:src="@drawable/ic_volume_down_grey_500_24dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />

                    <SeekBar
                        android:id="@+id/play_volume"
                        android:layout_marginHorizontal="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginRight="32dp"
                        android:src="@drawable/ic_volume_up_grey_500_24dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--HotLine-->
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_side"
            android:elevation="16dp"
            android:layout_marginHorizontal="4dp"
            android:orientation="vertical">

            <!-- Msgs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <!--Show Messages-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/msg_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />

            </LinearLayout>

            <!-- Hot Line -->
            <ImageButton
                android:id="@+id/hotline_in_music_fragment"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:src="@drawable/ic_keyboard_voice_white_24dp"
                android:background="@drawable/button_hotline"
                android:foreground="?android:attr/selectableItemBackground"/>

            <!-- Logo -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="36dp"

                android:src="@drawable/musharing"/>

        </LinearLayout>

    </RelativeLayout>

