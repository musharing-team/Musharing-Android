<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MusicFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_pad"
        android:orientation="vertical">

        <!-- 曲目信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:elevation="8dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/background_screen">

            <!-- Title -->
            <TextView
                android:id="@+id/play_title_text"
                android:textColor="@color/colorAccent"
                android:textSize="30dp"
                android:gravity="right"
                android:text="孤单的月饼"
                android:layout_margin="16dp"
                android:layout_marginRight="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Artist -->
            <TextView
                android:id="@+id/play_artist_text"
                android:textColor="#888"
                android:textSize="20dp"
                android:gravity="left"
                android:text="卖报的小王子"
                android:layout_margin="16dp"
                android:layout_marginLeft="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Progress -->
            <LinearLayout
                android:orientation="horizontal"
                android:padding="4dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="24sp" >

                <TextView
                    android:id="@+id/play_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="——:——"
                    android:layout_marginRight="8dp"
                    android:textSize="10dp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />

                <ProgressBar
                    android:id="@+id/play_progress_bar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="8" />

                <TextView
                    android:id="@+id/play_residue"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="——:——"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <!-- Image -->
                <ImageView
                    android:elevation="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cassette"/>

                <!-- Volume -->
                <LinearLayout
                    android:gravity="center"
                    android:elevation="16dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginLeft="32dp"
                        android:src="@drawable/ic_volume_down_grey_500_24dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />

                    <SeekBar
                        android:id="@+id/play_volume"
                        android:layout_marginHorizontal="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginRight="32dp"
                        android:src="@drawable/ic_volume_up_grey_500_24dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_margin="10dp">

                <!-- Start/Pause -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:gravity="left"
                    android:layout_gravity="left">

                    <Button
                        android:id="@+id/play_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:elevation="2dp"
                        android:background="@drawable/button_em"
                        android:foreground="?android:attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/play_status_text"
                        android:text="播放"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#F5F3FD"/>

                </LinearLayout>

                <!-- Blank -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <!-- Nav -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:gravity="left"
                    android:layout_gravity="left">

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:elevation="2dp"
                        android:background="@drawable/button_common"
                        android:foreground="?android:attr/selectableItemBackground"/>

                    <TextView
                        android:text="导航"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#F5F3FD"/>

                </LinearLayout>

                <!-- Room -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:gravity="left"
                    android:layout_gravity="left">

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:elevation="2dp"
                        android:background="@drawable/button_common"/>

                    <TextView
                        android:text="房间"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#F5F3FD"
                        android:foreground="?android:attr/selectableItemBackground"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Msgs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <!--Show Messages-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/msg_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>

        <!-- Hot Line -->
        <ImageButton
            android:id="@+id/hotline_in_music_fragment"
            android:layout_margin="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:src="@drawable/ic_keyboard_voice_white_24dp"
            android:background="@drawable/button_hotline"
            android:foreground="?android:attr/selectableItemBackground"/>

        <!-- Logo -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/musharing"/>

    </LinearLayout>

</FrameLayout>