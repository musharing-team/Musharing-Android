<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sparkBlue</item>
        <item name="colorPrimaryDark">@color/sparkBlueDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Frame叠加，isFloat是否浮动，isTranslucent是否半透明，Dim是背景是否变暗 -->
    <style name="RecordingDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
